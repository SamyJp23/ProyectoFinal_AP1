@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public List<(string Feature, bool IsActive)> Features { get; set; }

    [Parameter]
    public string Price { get; set; }

    [Parameter]
    public bool IsActive { get; set; }

    [Parameter]
    public string ImageSrc { get; set; }

    [Parameter]
    public int Contador { get; set; } 
}

<div class="pricing-card @(IsActive ? "active" : "")">
    <div class="card-header">
        <img src="@ImageSrc" alt="User Image" class="user-image" />
    </div>
    <div class="card-body">
        <div class="header">
            <h2>@Title</h2>
            <p>@Description</p>
        </div>
        <ul class="features">
            @foreach (var feature in Features)
            {
                <li class="@(!feature.IsActive ? "inactive" : "")">
                    <i class="icon"></i> @feature.Feature <span class="@(feature.IsActive ? "check" : "cross")">@((feature.IsActive ? "✔" : "✘"))</span>
                </li>
            }
        </ul>
        <div class="price">
            @Price
        </div>
    </div>
    <div class="card-footer">
        <button class="btn-profile">Ver Perfil</button>
        <div class="user-count">Total de usuarios: @Contador</div> 
    </div>
</div>

<style>
    .pricing-card {
        width: 300px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 15px;
        padding: 0;
        overflow: hidden;
        transition: transform 0.5s ease;
        position: absolute;
        opacity: 0;
        transform: scale(0.8);
        z-index: 0;
    }

        .pricing-card.active {
            opacity: 1;
            transform: scale(1);
            z-index: 1;
        }

    .user-count {
        margin-top: 10px;
        font-size: 1rem;
        color: #333;
    }
    .card-header {
        width: 100%;
        height: 150px; 
        background-color: #f4f4f4;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .user-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .header {
        text-align: left;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

        .header h2 {
            margin: 0;
            font-size: 1.5em;
            font-weight: bold;
        }

        .header p {
            margin: 5px 0 0;
            color: #666;
        }

    .features {
        list-style: none;
        padding: 0;
        margin: 20px 0;
    }

        .features li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 0;
            color: #333;
        }

        .features .inactive {
            color: #ccc;
        }

    .check {
        color: green;
    }

    .cross {
        color: red;
    }

    .price {
        text-align: center;
        background: #ff6600;
        color: white;
        padding: 10px;
        border-radius: 25px;
        font-weight: bold;
        margin-top: 20px;
    }

    .card-footer {
        padding: 15px;
        text-align: center;
        background-color: #f4f4f4;
    }

    .btn-profile {
        background-color: #ff6600;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s;
    }

        .btn-profile:hover {
            background-color: #e65c00;
        }
</style>
