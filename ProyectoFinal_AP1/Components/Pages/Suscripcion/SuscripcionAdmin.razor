@page "/SuscripcionAdmin"
@inject NavigationManager Navigation
@inject ProyectoFinal_AP1.Services.SuscripcionService SuscripcionService
@rendermode InteractiveServer
@using SuscripcionModel = ProyectoFinal_AP1.Models.Suscripcion

<div class="page-specific">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars" style="color: white;"></i>
            </button>

            <a class="navbar-brand ms-2" href="#">
                <img src="Images/LogoNombre.png" alt="Logo" style="height: 40px;">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                <form class="d-flex ms-auto">
                    <div class="dropdown">
                        <a href="#" class="nav-link text-light" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bars"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/MenuAdmin">Admin</a></li>
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </nav>
</div>

<div class="container mt-5">
    <div class="pricing-cards">
        @foreach (var suscripcion in suscripciones)
        {
            <div class="pricing-card">
                <div class="header">
                    <h2>@suscripcion.Descripcion</h2>
                    <img src="data:image/png;base64,@Convert.ToBase64String(suscripcion.FotoPerfil)" alt="Foto de la Suscripción" class="trainer-photo" />
                    <p>Plan @suscripcion.Descripcion</p>
                </div>
                <ul class="features">
                </ul>
                <button class="price-btn" @onclick="Pagar">$@suscripcion.Precio</button>

            </div>
        }
    </div>
</div>
<button class="btn btn-primary" @onclick="Ir">+</button>
<button class="btn btn-primary" @onclick="Comparacion">Comparar</button>

@code {
    private List<SuscripcionModel> suscripciones = new List<SuscripcionModel>();

    protected override async Task OnInitializedAsync()
    {
        suscripciones = await SuscripcionService.GetSuscripcionesAsync();
    }

    public void Pagar()
    {

        Navigation.NavigateTo("/Pago");
    }

    private void Ir()
    {
        Navigation.NavigateTo("/AgregarSuscripcion");
    }
    private void Comparacion()
    {
        Navigation.NavigateTo("/Comparacion");
    }
    }