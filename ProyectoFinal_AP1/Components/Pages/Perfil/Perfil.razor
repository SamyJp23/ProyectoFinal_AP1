@page "/Perfil/{IdUsuario:int}"
@inject UserService userService
@inject NavigationManager navigationManager

<EditForm Model="Usuario" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="card shadow-lg border-0 rounded" style="background-color: #f8f9fa;">
        <div class="card-header bg-primary text-white" style="text-align: center;">
            <h3><i class="fas fa-clipboard-list"></i> Datos personales</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3 text-center">
                    @if (Usuario.FotoPerfil != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(Usuario.FotoPerfil)" alt="Foto de Perfil" width="150" height="150" class="rounded-circle" />
                    }
                    <button class="btn btn-primary mt-2">Cambiar</button>
                    <a href="#" class="d-block mt-2">¿Cambiar mi contraseña?</a>
                </div>
                <div class="col-md-9">
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombres</label>
                        <InputText id="Nombre" @bind-Value="Usuario.Nombre" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Apellido" class="form-label">Apellidos</label>
                        <InputText id="Apellido" @bind-Value="Usuario.Apellido" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Genero" class="form-label">Género</label>
                        <InputText id="Genero" @bind-Value="Usuario.Genero" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Correo" class="form-label">Correo Electrónico</label>
                        <InputText id="Correo" @bind-Value="Usuario.Correo" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Telefono" class="form-label">Teléfono</label>
                        <InputText id="Telefono" @bind-Value="Usuario.Telefono" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Direccion" class="form-label">Dirección</label>
                        <InputText id="Direccion" @bind-Value="Usuario.Direccion" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-outline-success ml-2"><span class="bi bi-check-circle-fill"></span> Guardar</button>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int IdUsuario { get; set; }

    public Usuario Usuario { get; set; } = new Usuario();

    protected override async Task OnInitializedAsync()
    {
        Usuario = await userService.GetUserByIdAsync(IdUsuario);
    }

    public async Task Guardar()
    {
        await userService.ActualizarUsuario(Usuario);
        navigationManager.NavigateTo("/Usuarios");
    }
}